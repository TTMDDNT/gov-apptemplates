                "operationMetadataId": "8cfae70e-ae19-48ce-814b-928cdbc2b6bc"
              },
              "type": "SetVariable",
              "inputs": {
                "name": "ResultText",
                "value": "ACT-@{rand(10000, 20000)}"
              }
            }
          },
          "runAfter": {
            "Initialize_variable": [
              "Succeeded"
            ]
          },
          "expression": {
            "equals": [
              "@triggerBody()['text']",
              "Accounting Number"
            ]
          },
          "metadata": {
            "operationMetadataId": "542e8eba-8765-4882-b3ba-bb7dc3c58a50"
          },
          "type": "If"
        },
        "Initialize_variable": {
          "runAfter": {},
          "metadata": {
            "operationMetadataId": "73cf6592-f395-4ffd-9e76-bc9bde0ac569"
          },
          "type": "InitializeVariable",
          "inputs": {
            "variables": [
              {
                "name": "ResultText",
                "type": "string"
              }
            ]
          }
        },
        "Respond_to_a_PowerApp_or_flow": {
          "runAfter": {
            "Condition": [
              "Succeeded"
            ]
          },
          "metadata": {
            "operationMetadataId": "683bfd3d-b329-4f56-bb0c-068191be11b1"
          },
          "type": "Response",
          "kind": "PowerApp",
          "inputs": {
            "statusCode": 200,
            "body": {
              "resulttext": "@variables('ResultText')"
            },
            "schema": {
              "type": "object",
              "properties": {
                "resulttext": {
                  "title": "ResultText",
                  "x-ms-dynamically-added": true,
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "templateName": ""
  },
