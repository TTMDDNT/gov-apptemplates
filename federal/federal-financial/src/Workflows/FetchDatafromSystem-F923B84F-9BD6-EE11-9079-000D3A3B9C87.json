      "triggers": {
        "manual": {
          "metadata": {
            "operationMetadataId": "7ab6a5cf-9457-45b9-809f-e3a3ae640eb1"
          },
          "type": "Request",
          "kind": "PowerAppV2",
          "inputs": {
            "schema": {
              "type": "object",
              "properties": {
                "text": {
                  "title": "From System",
                  "type": "string",
                  "x-ms-dynamically-added": true,
                  "description": "Please enter the Source System Name",
                  "x-ms-content-hint": "TEXT"
                }
              },
              "required": [
                "text"
